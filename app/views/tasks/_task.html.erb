<div id="<%= dom_id task %>">
  <div class="card-header">
    <h4>
      <%= task.title %>
    </h4>
  </div>
  <div class="card-body">
    <p class="card-text">
      <strong>Start date:</strong>
      <%= task.start_date %>
    </p>
    <p class="card-text">
      <strong>End date:</strong>
      <%= task.end_date %>
    </p>
    <p class="card-text">
      <strong>Status:</strong>
      <%= task.status %>
    </p>
    <p class="card-text">
      <strong>Description:</strong>
      <div class="card">
        <p style="margin: 5px;"><%= task.description %></p>
      </div>
    </p>
    <p class="card-text">
      <strong>Type:</strong>
      <%= task.task_type %>
    </p>
    <p class="card-text">
      <strong>Estimation:</strong>
      <%= task.estimation %>
    </p>
    <p class="card-text">
      <strong>Priority:</strong>
      <%= task.priority %>
    </p>
    <p class="card-text">
      <strong>Owners:</strong>
      <% task.developers.each do |developer| %>
        <ul>
          <li><%= developer.name %> <%= developer.lastname %></li>
        </ul>
      <% end %>
    </p>
    <p class="card-text">
      <strong>Labels:</strong>
      <% task.labels.each do |label| %>
        <ul>
          <li><%= label.name %>
        </ul>
      <% end %>
    </p>
    
    <div class="row justify-content-between">
      <div class="col-2">
        <%= link_to "Edit this task", edit_project_task_path(@project, @task), class: "btn btn-outline-primary" %>
      </div>
      <div class="col-2">
        <%= button_to "Destroy this task", project_task_path(@project, @task), method: :delete, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>
