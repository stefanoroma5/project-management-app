<div class="card-body">
  <%= form_with(model: [@project, task]) do |form| %>
    <% if task.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
          <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row mb-2">
      <%= form.label :title, "Title *", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.text_field :title, class: "form-control", required: true %>
      </div>
    </div>
    <div class="row mb-2">
      <%= form.label :start_date, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.date_field :start_date, class: "form-control" %>
      </div>
    </div>
    <div class="row mb-2">
      <%= form.label :end_date, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.date_field :end_date, class:"form-control" %>
      </div>
    </div>
    <div class="row mb-2">
      <%= form.label :status, "Status *", class: "col-sm-3 col-form-label"%>
      <div class="col-sm-9">
        <%= form.select :status, ['Unstarted', 'Started', 'Finished'], { selected: 'Unstarted' }, class: "form-select", required: true %>
      </div>
    </div>
    <div class="row mb-2">
      <%= form.label :description, "Description *", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.text_area :description, class: "form-control", required: true, rows: 10 %>
      </div>
    </div>
    <div class="row mb-2">
      <%= form.label :task_type, "Type *", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.select :task_type, ['Feature', 'Chore', 'Bug', 'Release'], {selected: 'Feature'}, class: "form-select", required: true %>
      </div>
    </div>
    <div class="row mb-2">
      <%= form.label :estimation, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.number_field :estimation, class: "form-control" %>
      </div>
    </div>
    <div class="row mb-2">
      <%= form.label :priority, "Priority *", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= form.select :priority, ['Low', 'Medium', 'High'], {selected: 'Low'}, class: "form-select", required: true %>
      </div>
    </div>
    <div class="row mb-2">
      <%= form.label :developer_tasks, "Owners", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <% @task.project.developer_projects.where(status: 'Active').each do |developer_project| %>
          <% developer = developer_project.developer %>
          <div class="form-check">
            <%= check_box_tag "developer_ids[]", developer.id, @task.developer_ids.include?(developer.id), id: dom_id(developer, :select), class: "form-check-input" %>
            <%= label_tag dom_id(developer, :select), "#{developer.name} #{developer.lastname} (#{developer.email})", class: "form-check-label" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row justify-content-between">
      <div class="col-2">
        <%= link_to "Cancel", project_tasks_path(@project), class: "btn btn-danger" %>
      </div>
      <div class="col-2">
        <%= form.submit class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>
</div>