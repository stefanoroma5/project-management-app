<%= form_with(model: [@project, task]) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-2">
    <%= form.label :title, "Title *", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label :start_date, class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.date_field :start_date, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label :end_date, class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.date_field :end_date, class:"form-control" %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label :status, "Status *", class: "col-sm-4 col-form-label"%>
    <div class="col-sm-8">
      <%= form.select :status, [['Please, select an option', nil], 'Unstarted', 'Started', 'Finished'], {}, class: "form-select", required: true %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label :description, "Description *", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.text_area :description, class: "form-control", required: true %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label :task_type, "Type *", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.select :task_type, [['Please, select an option', nil], 'Feature', 'Chore', 'Bug', 'Release'], {}, class: "form-select", required: true %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label :estimation, class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.number_field :estimation, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label :priority, "Priority *", class: "col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.select :priority, [['Please, select an option', nil], 'Low', 'Medium', 'High'], {}, class: "form-select", required: true %>
    </div>
  </div>

  <div class="mb-1">
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
