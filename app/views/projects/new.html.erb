<!-- Benvenuto -->
<p style="margin-left: 1%; margin-top: 1%"> Welcome <%= current_developer.name %> </p>

<!-- Titolo -->
<div class="container my-4 text-center">
  <h1>New project</h1>
</div>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg justify-content-center", style="margin-bottom: 1rem;">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item", style="padding-eft: 4rem; padding-right: 4rem;">
          <%= link_to "Notification center", notifications_path, class: "nav-link active" %>
        </li>
        <li class="nav-item", style="padding-eft: 4rem; padding-right: 4rem;">
          <%= link_to "Back to projects", "http://127.0.0.1:3000/projects?mode=m", class: "nav-link active" %>
        </li>
        <li class="nav-item", style="padding-eft: 4rem; padding-right: 4rem;">
          <%= button_to "Sign out", destroy_developer_session_path, method: :delete, class: "nav-link active" %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Card per la form si creazione del nuovo progetto -->
<div class="container">
  <div class="card bg-body-tertiary" style="width: 26rem; margin: 0 auto;">
    <div class="card-body">
      <%= render "form", project: @project %>
    </div>
  </div>
</div>
